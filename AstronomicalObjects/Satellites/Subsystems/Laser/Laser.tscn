code = "shader_type spatial;


vec3 get_color(float time,vec2 uv){
	float xCol = (uv.x - (time / 8.0)) * 3.0;
	xCol = mod(xCol, 3.0);
	vec3 horColor = vec3(0.25, 0.25, 0.25);
	if (xCol < 1.0) {
		horColor.r += 1.0 - xCol;
		horColor.g += xCol;
	}
	else if (xCol < 2.0) {
		xCol -= 1.0;
		horColor.g += 1.0 - xCol;
		horColor.b += xCol;
	}
	else {
		xCol -= 2.0;
		horColor.b += 1.0 - xCol;
		horColor.r += xCol;
	}
    return horColor;
}

